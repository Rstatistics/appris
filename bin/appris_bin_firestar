#!/bin/bash

# -----------------------------------------------------------------------------
# Load environmental variables
# If you do not trust the path, configure below:
SYSTEM=`uname -s`
if [ "$SYSTEM" = Darwin ]
then
	source /etc/bashrc
	source /etc/profile
	source ${HOME}/.bash_profile
elif [ "$SYSTEM" = Linux ]
then
	source /etc/profile
	source /etc/bash.bashrc
	source ${HOME}/.bashrc
fi


METHOD_SCRIPT="firestar/firestar.pl"

# Run method
SCRIPT="${APPRIS_PROGRAMS_SRC_DIR}/${METHOD_SCRIPT}"

# print trace
echo "================="
echo "perl ${SCRIPT}"
echo " --conf=pipeline.ini"
echo " --input=transl.fa"
echo " --output=firestar"
echo " --loglevel=info"
echo " --logfile=log"

# run method
perl ${SCRIPT} \
--conf=pipeline.ini \
--input=transl.fa \
--output=firestar \
--loglevel=debug
echo "================="
